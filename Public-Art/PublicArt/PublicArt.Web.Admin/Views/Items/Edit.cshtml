                    @Html.EditorFor(model => model.Description, new {htmlAttributes = new {@class = "form-control", @rows = 4}})
                    @Html.ValidationMessageFor(model => model.Description, "", new {@class = "text-danger"})
                </div>
            </div>

            <div class="form-group">
